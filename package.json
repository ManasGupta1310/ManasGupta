{
  "name": "nextjs-typescript-mdx-blog",
  "author": "@huntarosan",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "export NODE_OPTIONS=--openssl-legacy-provider; next dev",
    "build": "next build",
    "export": "next export && touch out/.nojekyll",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "npm lint && npm type-check && npm test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm lint",
      "npm format"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.8.1",
    "@tailwindcss/typography": "^0.4.1",
    "date-fns": "^2.19.0",
    "gray-matter": "^4.0.2",
    "hast-util-is-element": "^1.1.0",
    "mdx-prism": "^0.3.3",
    "next": "^11.0.1",
    "next-mdx-remote": "^3.0.2",
    "next-themes": "^0.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-katex": "^5.0.0",
    "rehype-slug": "^4.0.1",
    "remark-code-titles": "^0.1.1",
    "remark-math": "^3.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.19.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.19.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.0.10",
    "postcss": "^8.3.5",
    "prettier": "^2.0.2",
    "rehype": "^11.0.0",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.3.4"
  }
}
